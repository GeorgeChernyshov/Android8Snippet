<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/sendChatNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_send_chat_notification"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/replyTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/notification_reply"
        app:layout_constraintTop_toBottomOf="@id/sendChatNotificationButton" />

    <TextView
        android:id="@+id/replyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/replyTitleTextView" />

    <TextView
        android:id="@+id/autofillTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/autofill_title"
        app:layout_constraintTop_toBottomOf="@id/replyTextView" />

    <EditText
        android:id="@+id/autofillEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="emailAddress"
        android:inputType="text"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/autofillTitleTextView" />

    <TextView
        android:id="@+id/downloadableFontsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="@string/downloadable_fonts_title"
        app:layout_constraintTop_toBottomOf="@id/autofillEditText"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>